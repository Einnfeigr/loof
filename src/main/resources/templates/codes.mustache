{{#codes.exists}}
	<form method="post" id="codes"></form>
	<form method="post" id="delete" action="/codes/delete"></form>
	<div class="tablewrapper">
		<table>
			<tr>
				<th>
				</th>
				<th>
					Код
				</th>
				<th>
					nfc-тег
				</th>
				<th>
					Користувач
				</th>
			</tr>
			{{#codes}}
				<tr>
					<td>
						{{^user}}
							<input form="delete" type="checkbox" name="codes" value="{{id}}" />
						{{/user}}
					</td>
					<td>
						{{id}}
						<input form="codes" type="hidden" name="ids" value="{{id}}" />
					</td>
					<td>
						<input form="codes" type="text" name="nfcs" value="{{nfc}}" />
					</td>
					<td>
						<a href="/u/{{user.login}}">{{user.login}}</a>
					</td>
				</tr>
			{{/codes}}
		</table>
	</div>
	<div class="buttons">
		<a class="button" href="/manage">Назад</a>
		<button form="delete" class="button" type="submit">Видалити вибране</button>
		<button form="codes" type="submit">Зберегти</button>
	</div>
{{/codes.exists}}
