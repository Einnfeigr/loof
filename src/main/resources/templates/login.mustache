{{#isError}}
	<p class="error">
		<i>{{error}}</i>
	</p>
{{/isError}}
<br>
<form method="POST" action="login" class="loginForm">
	<span><img src="/img/icon/019-user.svg" />Логин</span>
	<input type="text" name="username" />
	<span><img src="/img/icon/009-lock.svg" />Пароль</span>
	<input type="password" name="password" />
	<br>
	<div class="buttons" >
		<span class="submit"><input name="submit" type="submit" value="Войти" /></span>
		<a href="/recovery">Забыли пароль?</a>
	</div>
</form>
